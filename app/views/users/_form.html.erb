<%= simple_form_for @user do |f| %>

    <%= f.input :first_name %>

    <%= f.input :last_name %>

    <%= f.input :email, hint: "This will also your be your signin name" %>

    <%= f.input :password, hint: "Must be at least 6 characters" %>

    <%= f.input :password_confirmation %>

    <%= f.hidden_field :role, value: params[:role] %>

    <%= f.button :submit %>

<% end %>
