<div id="employee-table">
	<table class="table table-condensed">			
		<thead>
			<tr>
				<th>Employee Name</th>
				<th>Employee Email</th>
				<th>Employee Phone</th>
				<th>Status</th>
			</tr>
		</thead>		
		<tbody>
			<% @employees.each do |employee| %>
				<tr>
					<td>
						<%= employee.full_name %>
					</td>
					<td>
						<%= employee.email %>
					</td>
					<td>
						<%= employee.primary_phone %>
					</td>
					
					<td>
						<% if @business.service_active %>
							<% if current_user != employee %>
								<%= link_to "delete", employee, method: :delete, class: "btn btn-mini btn-warn", confirm: "Are you sure?" %>
							<% end %>
						<% else %>
							<z class="business-inactive">Service inactive - no actions available</z>
						<% end %>
					</td>
				</tr>
			<% end %>
			<tr>
				<td><%= link_to "+ Add an employee", add_employee_service_path(@business) %></td><td></td><td></td><td></td>
			</tr>
		</tbody>
	</table>
</div>
<hr>

