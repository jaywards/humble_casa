<%= simple_form_for([@user, @property]) do |f| %>
	    <%= f.input :name, label: 'Property name', hint: "A simple nickname for this property" %>
	    <%= f.input :address1 %>
	    <%= f.input :address2 %>
	    <%= f.input :city %>
	    <%= f.input :state %>
	    <%= f.input :zip %>
		<%= f.input :phone %>
	    <%= f.input :instructions, label: 'Instructions for the property', placeholder: 'Lock box code, security disarm code, preferred entry door, etc.', hint: 'These instructions are only seen by the service providers you select.' %>
		<%= f.button :submit %>
<% end %>